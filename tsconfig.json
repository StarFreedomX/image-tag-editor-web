{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "./lib",
    "target": "esnext",
    "module": "esnext",
    "declaration": true,
    "emitDeclarationOnly": false,
    "composite": true,
    "incremental": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "types": [
      "node",
    ],
    "paths": {
      "@/*": ["src/*"]
    },
    "baseUrl": "."
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
  ]
}
